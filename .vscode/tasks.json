{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sphinx",
            "type": "shell",
            "command": "sphinx-build . ../public",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "problemMatcher": []
        },
        {
            "label": "sphinx-autobuild",
            "type": "shell",
            "command": "sphinx-autobuild . ../public --open-browser",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}